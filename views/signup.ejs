<% include partial/header%>
<div class="signupform">
  
  <form class="form-horizontal" method="POST" action="/afterSignup" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label id="firstname" for="email">First Name:</label>
      <div>
        <input type="text" class="form-control" id="firstname" value="firstname" placeholder="First Name" name="firstname" required>
      </div>
    </div>
    <div class="form-group">
      <label id="lastname" for="email">Last Name:</label>
      <div>
        <input type="text" class="form-control" id="lastname" value="lastname" placeholder="Last Name" name="lastname" required>
      </div>
    </div>
    <div class="form-group">
      <label id="email" for="email">Email:</label>
      <div>
        <input type="email" class="form-control" id="mailid" value="email" placeholder="Enter email" name="email" required>
      </div>
    </div>
    <div class="form-group">
      <label id="password" for="pwd">Password:</label>
      <div>          
        <input type="password" class="form-control" id="pswd" value="password" placeholder="Enter password" name="password" required>
      </div>
    </div>
    
    <div class="form-group">        
      <div>
        <button type="submit" class="btn btn-default">Sign Up</button>
      </div>
    </div>
  </form>
</div>
<% include partial/footer%>