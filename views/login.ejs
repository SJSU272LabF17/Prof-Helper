<% include partial/header%>

<div class="loginform">
  
  <form class="form-horizontal" method="POST" action="/afterSignin" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
      <label id="email" for="email">Email:</label>
      <div>
        <input type="email" class="form-control" id="mail" value="email" placeholder="Enter email" name="email" required="">
      </div>
    </div>
    <div class="form-group">
      <label id="password" for="pwd">Password:</label>
      <div>          
        <input type="password" class="form-control" id="pwd" value="password" placeholder="Enter password" name="pwd" required>
      </div>
    </div>
    <div class="form-group">        
      <div>
        <div class="checkbox">
          <label><input type="checkbox" name="remember"> Remember me</label>
        </div>
      </div>
    </div>
    <div class="form-group">        
      <div>
        <button type="submit" class="btn btn-default">Sign In</button>
      </div>
    </div>
  </form>
</div>
<% include partial/footer%>